{
  "compilerOptions": {
    "composite": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@belkit/*": ["packages/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["packages","global.d.ts"]
}